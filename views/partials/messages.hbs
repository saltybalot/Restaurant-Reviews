<script>
  // Auto-hide messages after 5 seconds
  document.addEventListener('DOMContentLoaded', function() {
    // Auto-hide success messages
    const successMessages = document.querySelectorAll('.message-overlay[status="success"]');
    successMessages.forEach(function(message) {
      setTimeout(function() {
        message.style.animation = 'slideOutUp 0.5s ease-out';
        setTimeout(function() {
          message.remove();
        }, 500);
      }, 5000);
    });
    
    // Auto-hide error messages
    const errorMessages = document.querySelectorAll('.message-overlay[status="error"]');
    errorMessages.forEach(function(message) {
      setTimeout(function() {
        message.style.animation = 'slideOutUp 0.5s ease-out';
        setTimeout(function() {
          message.remove();
        }, 500);
      }, 5000);
    });
  });
</script>

{{#if error_msg}}
<div class="message-overlay" status="error">
  <div>
    <button class="close-message" onclick="this.parentElement.parentElement.remove()">&times;</button>
    <h6 class="red-text text-darken-2"><strong>{{error_msg}}</strong></h6>
  </div>
</div>
{{/if}}

{{#if success_msg}}
<div class="message-overlay" status="success">
  <div>
    <button class="close-message" onclick="this.parentElement.parentElement.remove()">&times;</button>
    <h6 class="green-text text-darken-2"><strong>{{success_msg}}</strong></h6>
  </div>
</div>
{{/if}}