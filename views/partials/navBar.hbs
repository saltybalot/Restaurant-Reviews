<div id="lastLoginModal" class="modal-overlay">
  <div class="last-login-modal-content">
    <div class="modal-header">
      <h3>Welcome Back!</h3>
      <button class="modal-close" onclick="closeLastLoginModal()">&times;</button>
    </div>
    <div class="modal-body">
      {{#if lastLoginInfo.isFirstLogin}}
        <p>This appears to be your first login. Welcome to Restaurant Reviews!</p>
      {{else}}
        <p><strong>Last Login Activity:</strong></p>
        <div class="login-info">
          <p><strong>Last login attempt:</strong> {{formatDate lastLoginInfo.timestamp}}</p>
          <p><strong>Status:</strong> 
            {{#if lastLoginInfo.success}}
              <span style="color: #28a745; font-weight: bold;">‚úì Successful</span>
            {{else}}
              <span style="color: #dc3545; font-weight: bold;">‚úó Unsuccessful</span>
            {{/if}}
          </p>
          {{#if lastLoginInfo.errorMessage}}
            <p><strong>Error:</strong> {{lastLoginInfo.errorMessage}}</p>
          {{/if}}
        </div>
      {{/if}}
    </div>
    <div class="modal-footer">
      <button class="modal-button" onclick="closeLastLoginModal()">Continue</button>
    </div>
  </div>
</div>
{{/if}}



